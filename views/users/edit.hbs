<h1>Edit Page</h1>

<form action="/profile/edit/{{currentUser.id}}" method="POST" enctype="multipart/form-data">
  <legend>Creating a Trip</legend>

  <div class="mb-3">
    <label class="form-label">Load your picture</label>
    <img src="{{currentUser.image}}" id="image" alt="Current User Image" width="200px" height="100px">
    <input type="file" name="image" class="form-control">
  </div>

  <div class="mb-3">
    <label class="form-label">Name</label>
    <input type="text" value="{{currentUser.name}}" name="name" class="form-control" placeholder="Ypur name here">
  </div>

  <div class="mb-3">
    <label class="form-label">Last Name</label>
    <input type="text" value="{{currentUser.lastName}}" name="lastName" class="form-control" placeholder="Your Last Name here">
  </div>

  <div class="mb-3">
    <label class="form-label">Birthdate</label>
    <input type="date" value='{{currentUser.birthdate}}' name="birthdate" class="form-control" placeholder="Your birthdate here">
  </div>

  <button type="submit" class="btn btn-primary">Save</button>
</form>
